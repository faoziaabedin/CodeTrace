{
  "name": "codetrace",
  "displayName": "CodeTrace",
  "description": "Record coding sessions and analyze them with AI",
  "version": "0.0.1",
  "publisher": "codetrace",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codetrace.startRecording",
        "title": "CodeTrace: Start Recording"
      },
      {
        "command": "codetrace.stopRecording",
        "title": "CodeTrace: Stop Recording"
      },
      {
        "command": "codetrace.viewSessionStats",
        "title": "CodeTrace: View Session Stats"
      },
      {
        "command": "codetrace.openTimeline",
        "title": "CodeTrace: Open Session Timeline"
      },
      {
        "command": "codetrace.generateSummary",
        "title": "CodeTrace: Generate Session Summary"
      }
    ],
    "configuration": {
      "title": "CodeTrace",
      "properties": {
        "codetrace.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for generating AI-powered session summaries. Get your key at https://platform.openai.com/api-keys",
          "scope": "application"
        },
        "codetrace.aiModel": {
          "type": "string",
          "default": "gpt-4o-mini",
          "enum": ["gpt-4o-mini", "gpt-4o", "gpt-4-turbo", "gpt-3.5-turbo"],
          "description": "OpenAI model to use for generating summaries",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "openai": "^6.15.0",
    "simple-git": "^3.30.0"
  }
}
